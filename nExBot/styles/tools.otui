/*
  nExBot Design System - Tools Module
  Utility windows for target holding, quiver management, and automation
*/

HoldTargetWindow < MainWindow
  id: HoldTargetWindow
  !text: tr('Hold Target')
  size: 350 250
  @onEscape: self:hide()

  FlatPanel
    id: holdPanel
    anchors.fill: parent
    anchors.bottom: separator.top
    margin-bottom: 8
    padding: 10
    layout:
      type: verticalBox

    Label
      text: Hold Target Configuration
      text-align: center
      font: verdana-11px-rounded
      color: #ff4513

    HorizontalSeparator
      margin-bottom: 10

    SettingCheckBox
      id: Enabled
      text: Enable Hold Target
      margin-top: 5

    HorizontalSeparator
      margin-top: 10
      margin-bottom: 10

    Label
      text: Mode:
      font: verdana-11px-rounded

    ComboBox
      id: HoldMode
      margin-top: 3
      @onSetup: |
        self:addOption("Follow Target")
        self:addOption("Keep Distance")
        self:addOption("Stand Still")

    Label
      text: Distance (for Keep Distance mode):
      font: verdana-11px-rounded
      margin-top: 10

    SpinBox
      id: HoldDistance
      margin-top: 3
      minimum: 1
      maximum: 10
      step: 1
      width: 60

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

/* Quiver Manager Window */
QuiverManagerWindow < MainWindow
  id: QuiverManagerWindow
  !text: tr('Quiver Manager')
  size: 350 300
  @onEscape: self:hide()

  FlatPanel
    id: quiverPanel
    anchors.fill: parent
    anchors.bottom: separator.top
    margin-bottom: 8
    padding: 10
    layout:
      type: verticalBox

    Label
      text: Quiver Manager Configuration
      text-align: center
      font: verdana-11px-rounded
      color: #269e26

    HorizontalSeparator
      margin-bottom: 10

    SettingCheckBox
      id: Enabled
      text: Enable Quiver Manager
      margin-top: 5

    HorizontalSeparator
      margin-top: 10
      margin-bottom: 10

    Label
      text: Ammo Item:
      font: verdana-11px-rounded

    Panel
      height: 40
      margin-top: 5

      BotItem
        id: AmmoItem
        anchors.left: parent.left
        anchors.verticalCenter: parent.verticalCenter

      Label
        id: ammoLabel
        anchors.left: prev.right
        anchors.verticalCenter: parent.verticalCenter
        margin-left: 10
        text: Drag ammo here
        font: verdana-11px-rounded
        color: #aeaeae

    Label
      text: Refill when below:
      font: verdana-11px-rounded
      margin-top: 10

    SpinBox
      id: RefillBelow
      margin-top: 3
      minimum: 1
      maximum: 1000
      step: 10
      width: 80

    Label
      text: Refill amount:
      font: verdana-11px-rounded
      margin-top: 10

    SpinBox
      id: RefillAmount
      margin-top: 3
      minimum: 1
      maximum: 1000
      step: 10
      width: 80

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

/* Depot Withdraw Window */
DepotWithdrawWindow < MainWindow
  id: DepotWithdrawWindow
  !text: tr('Depot Withdraw')
  size: 400 350
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text: Configure items to withdraw from depot
    text-align: center
    font: verdana-11px-rounded
    color: #aeaeae

  FlatPanel
    id: withdrawPanel
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: addPanel.top
    margin-top: 8
    margin-bottom: 8
    padding: 5

    ScrollablePanel
      id: withdrawList
      anchors.fill: parent
      vertical-scrollbar: withdrawScrollBar
      layout:
        type: verticalBox

    VerticalScrollBar
      id: withdrawScrollBar
      anchors.top: parent.top
      anchors.bottom: parent.bottom
      anchors.right: parent.right
      step: 30
      pixels-scroll: true

  FlatPanel
    id: addPanel
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: separator.top
    height: 60
    margin-bottom: 8
    padding: 8

    Label
      text: Add Item:
      anchors.left: parent.left
      anchors.top: parent.top
      font: verdana-11px-rounded

    BotItem
      id: newWithdrawItem
      anchors.top: prev.bottom
      anchors.left: parent.left
      margin-top: 3

    Label
      anchors.left: newWithdrawItem.right
      anchors.top: parent.top
      margin-left: 15
      text: Amount:
      font: verdana-11px-rounded

    SpinBox
      id: withdrawAmount
      anchors.top: prev.bottom
      anchors.left: newWithdrawItem.right
      margin-left: 15
      margin-top: 3
      minimum: 1
      maximum: 10000
      step: 10
      width: 80

    Button
      id: addWithdrawBtn
      anchors.right: parent.right
      anchors.verticalCenter: parent.verticalCenter
      text: Add
      size: 60 25

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

  Button
    id: clearAllBtn
    !text: tr('Clear All')
    font: cipsoftFont
    anchors.left: parent.left
    anchors.bottom: parent.bottom
    size: 60 21
    color: #ff4513

