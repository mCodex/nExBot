/*
  nExBot Design System - Extras Module
  Automation, combat, and safety feature toggles
*/

ExtrasWindow < MainWindow
  id: ExtrasWindow
  !text: tr('Extras')
  size: 500 400
  @onEscape: self:hide()

  /* Column 1 */
  FlatPanel
    id: column1
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.bottom: separator.top
    width: 155
    margin-bottom: 8
    padding: 8
    layout:
      type: verticalBox

    Label
      text: Automation
      text-align: center
      font: verdana-11px-rounded
      color: #00ff00

    HorizontalSeparator
      margin-bottom: 5

    ExtrasCheckBox
      id: AntiKick
      text: Anti-Kick
      !tooltip: tr('Prevents logout due to inactivity')

    ExtrasCheckBox
      id: SkinMonsters
      text: Skin Monsters
      !tooltip: tr('Automatically skin/dust monsters')

    ExtrasCheckBox
      id: AutoOpenDoors
      text: Auto Open Doors
      !tooltip: tr('Automatically opens doors')

    ExtrasCheckBox
      id: EatFood
      text: Eat Food
      !tooltip: tr('Automatically eats food')

    ExtrasCheckBox
      id: CastFood
      text: Cast Food
      !tooltip: tr('Casts food spell when needed')

    ExtrasCheckBox
      id: BuyBless
      text: Buy Bless (on death)
      !tooltip: tr('Buys blessings after death')

  /* Column 2 */
  FlatPanel
    id: column2
    anchors.top: parent.top
    anchors.left: prev.right
    anchors.bottom: separator.top
    width: 155
    margin-left: 10
    margin-bottom: 8
    padding: 8
    layout:
      type: verticalBox

    Label
      text: Combat
      text-align: center
      font: verdana-11px-rounded
      color: #ff4513

    HorizontalSeparator
      margin-bottom: 5

    ExtrasCheckBox
      id: HoldMwall
      text: Hold MWall
      !tooltip: tr('Holds magic wall cast')

    ExtrasCheckBox
      id: HoldWildGrowth
      text: Hold Wild Growth
      !tooltip: tr('Holds wild growth cast')

    ExtrasCheckBox
      id: HighlightTarget
      text: Highlight Target
      !tooltip: tr('Highlights current target')

    ExtrasCheckBox
      id: KeepCrosshair
      text: Keep Crosshair
      !tooltip: tr('Maintains crosshair on target')

    ExtrasCheckBox
      id: TrainMagic
      text: Train Magic Level
      !tooltip: tr('Uses training weapons/wands')

  /* Column 3 */
  FlatPanel
    id: column3
    anchors.top: parent.top
    anchors.left: prev.right
    anchors.bottom: separator.top
    width: 155
    margin-left: 10
    margin-bottom: 8
    padding: 8
    layout:
      type: verticalBox

    Label
      text: Safety
      text-align: center
      font: verdana-11px-rounded
      color: #269e26

    HorizontalSeparator
      margin-bottom: 5

    ExtrasCheckBox
      id: CheckPlayers
      text: Check Players
      !tooltip: tr('Monitors nearby players')

    ExtrasCheckBox
      id: AntiPush
      text: Anti-Push
      !tooltip: tr('Prevents being pushed')

    ExtrasCheckBox
      id: AntiRs
      text: Anti-RS (Login Watcher)
      !tooltip: tr('Monitors for suspicious activity')

    ExtrasCheckBox
      id: SupplyControl
      text: Supply Control
      !tooltip: tr('Controls supply usage')

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

/* Magic Wall Timer Window */
MwTimerPanel < FlatPanel
  size: 240 80
  padding: 8

  Label
    text: MWall Timer Settings
    text-align: center
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    font: verdana-11px-rounded

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right

  Label
    id: timerLabel
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Cast before:
    font: verdana-11px-rounded

  ExtrasScrollBar
    id: mwTimerValue
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5
    minimum: 1
    maximum: 10
    step: 1

  Label
    id: mwTimerLabel
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 3
    text-align: center
    text: 3 seconds
    font: verdana-11px-rounded

