/*
  nExBot Design System - Stashing/Depositer Module
  Depot slot management and item organization
*/

/* Stash Item Entry */
StashItemEntry < Panel
  height: 30
  margin-top: 3

  BotItem
    id: item
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter

  Label
    id: name
    anchors.left: prev.right
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 8
    font: verdana-11px-rounded
    text: Item Name

  Label
    id: slotLabel
    anchors.right: slotValue.left
    anchors.verticalCenter: parent.verticalCenter
    margin-right: 5
    font: verdana-11px-rounded
    text: Slot:

  SpinBox
    id: slotValue
    anchors.right: removeBtn.left
    anchors.verticalCenter: parent.verticalCenter
    margin-right: 8
    minimum: 1
    maximum: 18
    step: 1
    width: 50

  Button
    id: removeBtn
    anchors.right: parent.right
    anchors.verticalCenter: parent.verticalCenter
    text: x
    size: 20 20

/* Stashing Settings Window */
StashingSettingsWindow < MainWindow
  id: StashingSettingsWindow
  !text: tr('Stashing Settings')
  size: 400 400
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text: Configure items to deposit in specific depot slots
    text-align: center
    font: verdana-11px-rounded
    color: #aeaeae

  /* Stash List */
  FlatPanel
    id: stashListPanel
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: addPanel.top
    margin-top: 8
    margin-bottom: 8
    padding: 5

    ScrollablePanel
      id: stashList
      anchors.fill: parent
      vertical-scrollbar: stashScrollBar
      layout:
        type: verticalBox

    VerticalScrollBar
      id: stashScrollBar
      anchors.top: parent.top
      anchors.bottom: parent.bottom
      anchors.right: parent.right
      step: 30
      pixels-scroll: true

  /* Add Item Panel */
  FlatPanel
    id: addPanel
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: separator.top
    height: 70
    margin-bottom: 8
    padding: 8

    Label
      text: Add New Item:
      anchors.top: parent.top
      anchors.left: parent.left
      font: verdana-11px-rounded

    BotItem
      id: newItem
      anchors.top: prev.bottom
      anchors.left: parent.left
      margin-top: 5

    Label
      anchors.top: newItem.top
      anchors.left: newItem.right
      margin-left: 15
      text: Depot Slot:
      font: verdana-11px-rounded

    SpinBox
      id: newSlot
      anchors.top: prev.bottom
      anchors.left: newItem.right
      margin-left: 15
      margin-top: 3
      minimum: 1
      maximum: 18
      step: 1
      width: 60

    Button
      id: addItemBtn
      anchors.right: parent.right
      anchors.verticalCenter: parent.verticalCenter
      text: Add
      size: 60 25

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

  Button
    id: clearAllBtn
    !text: tr('Clear All')
    font: cipsoftFont
    anchors.left: parent.left
    anchors.bottom: parent.bottom
    size: 60 21
    color: #ff4513

/* Sell Exceptions Window */
SellExceptionsWindow < MainWindow
  id: SellExceptionsWindow
  !text: tr('Sell Exceptions')
  size: 350 350
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text: Items listed here will NOT be sold
    text-align: center
    font: verdana-11px-rounded
    color: #aeaeae

  /* Exception List */
  FlatPanel
    id: exceptionListPanel
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: addPanel.top
    margin-top: 8
    margin-bottom: 8
    padding: 5

    TextList
      id: exceptionList
      anchors.fill: parent
      vertical-scrollbar: exceptionScrollBar

    VerticalScrollBar
      id: exceptionScrollBar
      anchors.top: parent.top
      anchors.bottom: parent.bottom
      anchors.right: parent.right
      step: 14
      pixels-scroll: true

  /* Add Exception Panel */
  FlatPanel
    id: addPanel
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: separator.top
    height: 50
    margin-bottom: 8
    padding: 8

    Label
      text: Add Item:
      anchors.left: parent.left
      anchors.verticalCenter: parent.verticalCenter
      font: verdana-11px-rounded

    BotItem
      id: newException
      anchors.left: prev.right
      anchors.verticalCenter: parent.verticalCenter
      margin-left: 10

    Button
      id: addExceptionBtn
      anchors.right: parent.right
      anchors.verticalCenter: parent.verticalCenter
      text: Add
      size: 60 25

  HorizontalSeparator
    id: separator
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: closeButton.top
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    font: cipsoftFont
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 45 21
    margin-right: 5

  Button
    id: removeSelectedBtn
    !text: tr('Remove')
    font: cipsoftFont
    anchors.left: parent.left
    anchors.bottom: parent.bottom
    size: 60 21
