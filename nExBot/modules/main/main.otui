-- Main Tab OTUI Styles --

ComboBotWindow < MainWindow
  size: 360 450
  padding: 20
  !text: tr('ComboBot Settings')
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text-align: center
    text: Team combo synchronization
    margin-bottom: 10

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: On Say Trigger
    color: #aaaaff

  BotSwitch
    id: onSayEnabled
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5
    text: Enable Say Trigger

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Leader Name:
    width: 100

  TextEdit
    id: sayLeader
    anchors.top: prev.top
    anchors.left: prev.right
    anchors.right: parent.right
    margin-left: 5

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Trigger Phrase:
    width: 100

  TextEdit
    id: sayPhrase
    anchors.top: prev.top
    anchors.left: prev.right
    anchors.right: parent.right
    margin-left: 5

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 10

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Attack Settings
    color: #aaaaff

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Attack Spell:
    width: 100

  TextEdit
    id: attackSpell
    anchors.top: prev.top
    anchors.left: prev.right
    anchors.right: parent.right
    margin-left: 5

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Min Mana:
    width: 100

  SpinBox
    id: minMana
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    width: 80
    minimum: 0
    maximum: 10000
    step: 10

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 10

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Follow Settings
    color: #aaaaff

  BotSwitch
    id: followLeaderEnabled
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5
    text: Follow Leader

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Follow Name:
    width: 100

  TextEdit
    id: followName
    anchors.top: prev.top
    anchors.left: prev.right
    anchors.right: parent.right
    margin-left: 5

  HorizontalSeparator
    anchors.bottom: next.top
    anchors.left: parent.left
    anchors.right: parent.right
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    width: 64
    height: 20

FriendHealerWindow < MainWindow
  size: 360 480
  padding: 20
  !text: tr('Friend Healer Settings')
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text-align: center
    text: Configure friend healing
    margin-bottom: 10

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Target Conditions
    color: #aaaaff

  BotSwitch
    id: partyMembers
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.horizontalCenter
    margin-top: 5
    margin-right: 3
    text: Party Members

  BotSwitch
    id: guildMembers
    anchors.top: prev.top
    anchors.left: parent.horizontalCenter
    anchors.right: parent.right
    margin-left: 3
    text: Guild Members

  BotSwitch
    id: knights
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.horizontalCenter
    margin-top: 5
    margin-right: 3
    text: Knights

  BotSwitch
    id: paladins
    anchors.top: prev.top
    anchors.left: parent.horizontalCenter
    anchors.right: parent.right
    margin-left: 3
    text: Paladins

  BotSwitch
    id: druids
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.horizontalCenter
    margin-top: 5
    margin-right: 3
    text: Druids

  BotSwitch
    id: sorcerers
    anchors.top: prev.top
    anchors.left: parent.horizontalCenter
    anchors.right: parent.right
    margin-left: 3
    text: Sorcerers

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 10

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Heal Range:
    width: 100

  SpinBox
    id: healRange
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    width: 60
    minimum: 1
    maximum: 10
    step: 1

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Min HP% to Heal:
    width: 100

  SpinBox
    id: minHpToHeal
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    width: 60
    minimum: 1
    maximum: 99
    step: 5

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Mas Res Count:
    width: 100

  SpinBox
    id: masResCount
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    width: 60
    minimum: 2
    maximum: 10
    step: 1

  HorizontalSeparator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 10

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    text: Custom Players (one per line):

  TextEdit
    id: customPlayers
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    height: 60
    margin-top: 5
    multiline: true

  HorizontalSeparator
    anchors.bottom: next.top
    anchors.left: parent.left
    anchors.right: parent.right
    margin-bottom: 8

  Button
    id: closeButton
    !text: tr('Close')
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    width: 64
    height: 20

PushMaxWindow < MainWindow
  size: 320 350
  padding: 20
  !text: tr('PushMax Settings')
  @onEscape: self:hide()

  Label
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    text-align: center
    text: Magic wall push configuration
    margin-bottom: 10

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 15
    text: Push Delay:
    width: 100

  SpinBox
    id: pushDelay
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    width: 80
    minimum: 500
    maximum: 3000
    step: 50

  Label
    anchors.top: prev.top
    anchors.left: prev.right
